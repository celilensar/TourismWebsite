@model TourismWebsite.Models.Destination

@{ 
    ViewData["Title"] = "Destinasyon Düzenle"; 
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h3 class="card-title text-center mb-4">@ViewData["Title"]</h3>
                <hr class="mb-4"/>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control form-control-lg" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ImageUrl" class="control-label fw-semibold"></label>
                        <input asp-for="ImageUrl" class="form-control form-control-lg" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mt-4 d-grid gap-2 d-md-flex justify-content-md-end">
                        <input type="submit" value="Kaydet" class="btn btn-outline-primary btn-lg" />
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Listeye Geri Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts { 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} 
} 