@model TourismWebsite.ViewModels.TourDetailViewModel

@{ 
    ViewData["Title"] = Model.Name + " - Tur Detayları";
    var isAdmin = Context.Session.GetString("IsAdmin") == "True";
}

<div class="container py-4">
    <div class="card modern-destination d-flex flex-row align-items-stretch p-0 border-0 shadow-sm mb-4" style="border-radius: 1.5rem; min-height: 220px; overflow: hidden;">
        <div style="width: 260px; min-width: 260px; height: 220px; background: #f3f4f6; display: flex; align-items: center; justify-content: center;">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" style="width: 100%; height: 100%; object-fit: cover; border-radius: 0;" />
            }
            else
            {
                <img src="/images/default-tour-image.jpg" alt="Varsayılan Tur Resmi" style="width: 100%; height: 100%; object-fit: cover; border-radius: 0;" />
            }
        </div>
        <div class="flex-grow-1 d-flex flex-column justify-content-between p-4">
            <div>
                <h2 class="fw-bold mb-2">@Model.Name</h2>
                <div class="mb-2 text-muted" style="font-size: 1.1rem;">@Model.DestinationName</div>
                <div class="d-flex align-items-center gap-3 mb-2">
                    <span class="badge bg-primary bg-opacity-75" style="font-size:0.95rem;">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</span>
                    <span class="badge bg-success bg-opacity-75" style="font-size:0.95rem;">@Model.DurationDays gün</span>
                    <span class="text-warning fw-semibold" style="font-size:1.2rem;">₺@Model.Price.ToString("N0")</span>
                </div>
                <div class="d-flex align-items-center gap-3 text-secondary mb-2" style="font-size:1rem;">
                    <span><i class="bi bi-people"></i> @Model.Capacity kişi</span>
                    <span><i class="bi bi-calendar-event"></i> Başlangıç: @Model.StartDate.ToShortDateString()</span>
                </div>
                <div class="mb-2">
                    <strong>Tur Açıklaması:</strong><br />
                    <span>@Html.Raw(Model.Description?.Replace(Environment.NewLine, "<br />"))</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Itinerary))
                {
                    <div class="mb-2">
                        <strong>Tur Programı (Güzergah):</strong><br />
                        <span>@Html.Raw(Model.Itinerary.Replace(Environment.NewLine, "<br />"))</span>
                    </div>
                }
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-semibold" style="border-radius: 1.5rem; font-size: 1.1rem;">Tüm Turlara Geri Dön</a>
            </div>
        </div>
    </div>
    @if (Context.Session.GetInt32("UserId") != null && !isAdmin)
    {
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">Rezervasyon Yap</h5>
                <form asp-controller="Booking" asp-action="Create" method="post">
                    <input type="hidden" name="tourId" value="@Model.Id" />
                    <div class="form-group">
                        <label for="numberOfPeople">Kişi Sayısı:</label>
                        <input type="number" class="form-control" id="numberOfPeople" name="numberOfPeople" min="1" max="@Model.Capacity" value="1" required>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Rezervasyon Yap</button>
                    </div>
                </form>
            </div>
        </div>
    }
    else if (Context.Session.GetInt32("UserId") == null)
    {
        <div class="alert alert-info mt-3">
            Rezervasyon yapmak için lütfen <a asp-controller="Account" asp-action="Login">giriş yapın</a>.
        </div>
    }
</div> 