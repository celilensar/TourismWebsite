@model IEnumerable<TourismWebsite.ViewModels.TourSummaryViewModel>
@using Microsoft.AspNetCore.Http

@{ 
    // ViewData["Title"] layout tarafından kullanılabilir, biz sayfa içi başlık için PageTitle kullanalım.
    // ViewData["Title"] = ViewData["PageTitle"] ?? "Turlar"; // Tarayıcı sekmesi için de ayarlanabilir.
    var isAdmin = Context.Session.GetString("IsAdmin") == "True"; // Admin durumunu al
}

<h1>@ViewData["PageTitle"]</h1>

@* Admin ise ve belirli bir destinasyonun turları listeleniyorsa "Yeni Tur Ekle" butonu *@
@if (isAdmin && ViewData["PageTitle"] != null && !ViewData["PageTitle"].ToString().Equals("Tüm Turlar"))
{
    // Controller'dan ViewData["CurrentDestinationId"] gibi bir değer almak daha doğru olur.
    // Şimdilik basit bir create linki koyalım, destinationId'siz, veya controller güncellenmeli.
    <p><a asp-controller="Tours" asp-action="Create" class="btn btn-success mb-3">Bu Destinasyona Yeni Tur Ekle</a></p>
}
else if (isAdmin)
{
    <p><a asp-controller="Tours" asp-action="Create" class="btn btn-success mb-3">Genel Yeni Tur Ekle</a></p>
}


<div class="row g-4">
    @if (!Model.Any())
    {
        <div class="col">
            <p>Gösterilecek tur bulunamadı.</p>
        </div>
    }
    else
    {
        foreach (var tour in Model)
        {
            <div class="col-12">
                <div class="card modern-destination d-flex flex-row align-items-stretch p-0 border-0 shadow-sm" style="border-radius: 1.5rem; min-height: 160px; overflow: hidden;">
                    <div style="width: 180px; min-width: 180px; height: 160px; background: #f3f4f6; display: flex; align-items: center; justify-content: center;">
                        @if (!string.IsNullOrEmpty(tour.ImageUrl))
                        {
                            <img src="@tour.ImageUrl" alt="@tour.Name" style="width: 100%; height: 100%; object-fit: cover; border-radius: 0;" />
                        }
                        else
                        {
                            <img src="/images/default-tour-image.jpg" alt="Varsayılan Tur Resmi" style="width: 100%; height: 100%; object-fit: cover; border-radius: 0;" />
                        }
                    </div>
                    <div class="flex-grow-1 d-flex flex-column justify-content-between p-4">
                        <div>
                            <h5 class="fw-bold mb-2">@tour.Name</h5>
                            <div class="mb-2 text-muted" style="font-size: 1rem;">@tour.DestinationName</div>
                            <div class="d-flex align-items-center gap-3 mb-2">
                                <span class="badge bg-primary bg-opacity-75" style="font-size:0.85rem;">@tour.StartDate.ToShortDateString()</span>
                                <span class="text-warning fw-semibold" style="font-size:1.1rem;">₺@tour.Price.ToString("N0")</span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-column justify-content-between align-items-end p-4" style="min-width: 170px;">
                        <a asp-controller="Tours" asp-action="Details" asp-route-id="@tour.Id" class="btn btn-primary px-4 py-2 fw-semibold mb-2" style="border-radius: 1.5rem; font-size: 1.1rem;">Detayları Gör</a>
                        <button class="btn btn-light border rounded-circle shadow-sm" style="width: 40px; height: 40px;"><i class="bi bi-heart"></i></button>
                    </div>
                </div>
            </div>
        }
    }
</div>

@* Opsiyonel: Basit bir stil ekleyebiliriz *@
<style>
    .card-title {
        min-height: 40px; /* Kart başlıklarının aynı hizada kalmasına yardımcı olur */
    }
</style> 