@model TourismWebsite.ViewModels.CreateTourViewModel

@{ ViewData["Title"] = "Yeni Tur Oluştur"; }

<div class="row justify-content-center mt-4">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h3 class="card-title text-center mb-4">@ViewData["Title"]</h3>

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control form-control-lg" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Price" class="control-label fw-semibold"></label>
                                <input asp-for="Price" class="form-control form-control-lg" type="number" step="0.01" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="DurationDays" class="control-label fw-semibold"></label>
                                <input asp-for="DurationDays" class="form-control form-control-lg" type="number" />
                                <span asp-validation-for="DurationDays" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Itinerary" class="control-label fw-semibold"></label>
                        <textarea asp-for="Itinerary" class="form-control form-control-lg" rows="5"></textarea>
                        <span asp-validation-for="Itinerary" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ImageUrl" class="control-label fw-semibold"></label>
                        <input asp-for="ImageUrl" class="form-control form-control-lg" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="StartDate" class="control-label fw-semibold"></label>
                                <input asp-for="StartDate" class="form-control form-control-lg" type="date" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="EndDate" class="control-label fw-semibold"></label>
                                <input asp-for="EndDate" class="form-control form-control-lg" type="date" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Capacity" class="control-label fw-semibold"></label>
                                <input asp-for="Capacity" class="form-control form-control-lg" type="number" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="DestinationId" class="control-label fw-semibold"></label>
                                <select asp-for="DestinationId" class="form-select form-select-lg" asp-items="ViewBag.Destinations">
                                    <option value="">-- Destinasyon Seçin --</option>
                                </select>
                                <span asp-validation-for="DestinationId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mt-4 d-grid gap-2">
                        <button type="submit" class="btn btn-outline-primary btn-lg">Tur Oluştur</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 